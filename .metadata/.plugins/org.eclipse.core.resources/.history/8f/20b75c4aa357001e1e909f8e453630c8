    public static String generarDNI() {
        Random random = new Random();
        String letras = "ABCDEFGHIJKLMNÑOPQRSTUVWXYZ";
        int numeroDNI = random.nextInt(90000000) + 10000000;
        int indice = numeroDNI % 27;
        char letraControl = letras.charAt(indice); 
        return String.format("%d%c", numeroDNI, letraControl);
    }
	
    public static Pais obtenerPaisAleatorio() {
        Pais[] paises = Pais.values(); // Obtiene todos los valores del enum
        Random random = new Random();
        int indiceAleatorio = random.nextInt(paises.length); // Genera un índice aleatorio
        return paises[indiceAleatorio]; // Devuelve el país aleatorio
    }
	
	public static DaoPersonas getInstance() {
		if(dao == null) {
			return new DaoPersonas();
		}
		return dao;
	}

}
